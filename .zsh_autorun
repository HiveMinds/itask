workon() {
    source virtualenvwrapper.sh

    workon itask
}

run() {
    cd $PROJECT_FOLDER
    python -m itask.itask
}

compile() {
    if [ -z "$VIRTUAL_ENV" ]; then
      echo "Virtualenv not active"
      return 1
    fi

    python3 setup.py sdist bdist_wheel
}

upload() {
    if [ -z "$VIRTUAL_ENV" ]; then
      echo "Virtualenv not active"
      return 1
    fi

    twine upload --repository pypi dist/\*
}

